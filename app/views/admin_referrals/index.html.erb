<div class="admin-nav">
  <a class="navbar-brand" href="#"><%= image_tag("refunction_nav_logo.svg", class:"admin-logo") %>
  </a>
    <%= link_to "Log Out", logout_path, class:"btn admin-log-out-btn", method: :delete %>
</div>

<div class="container-fluid">
  <div class="row">

    <%= render 'layouts/admin_nav' %>


    <div class="admin-body col-sm-10">
      <div class="admin-team-search-bar" style="min-height: 900px;">
        <div class="container-fluid">
          <div class="row">
            <div class="search-top col-sm-12">
              <p>Referrals</p>
            </div>
          </div>
          <div class="row admin-search-padding">
            <div class="col-sm-12">
              <div class="row">
                <table class="table table-striped" id="referralTable">
                  <thead>
                    <tr>
                      <th scope="col">Date</th>
                      <th scope="col">Conf #</th>
                      <th scope="col">Type</th>
                      <th scope="col">Name</th>
                      <th scope="col">Claim/Policy #</th>
                      <th scope="col">File/Client ID#</th>
                      <th scope="col">Company</th>
                      <th scope="col">Advertisement</th>
                      <th scope="col">View</th>
                      <th scope="col">Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @referrals.each do |f| %>
                      <tr>
                        <th scope="row"><%= f.created_at.to_date %></th>
                        <td><%= f.public_uid %></td>
                        <td><%= f.referral_form_type %></td>
                        <td><%= f.rs_name %></td>
                        <td><%= f.client_file_number %></td>
                        <td><%= f.client_sub_file_number %></td>
                        <td><%= f.rs_office_name %></td> <!-- This is "Category" -->

                        <td><%= f.advertisement%></td>
                        <td><%= link_to "Show", admin_referral_path(f.public_uid) %></td>
                        <td><%= link_to "Delete", admin_referral_path(f.public_uid), method: :delete, data: {confirm: 'Are you sure?'} %></td>
                      </tr>
                    <% end %>

                  </tbody>
              </table>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
