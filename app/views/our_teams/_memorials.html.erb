<div class="row">
  <% @teams.each do |f| %>
  <div class="col-sm-12 col-md-12 col-lg-6 mg-bt-20 teams_card">
    <div class="card">
      <div>
         <%= image_tag f.image.url, class:"img-fluid border-color min-height-profile" %>
      </div>
      <div class="card-body" style="min-height: 210px;">
        <span class="font-lb bold"><%= f.first_name %> <%= f.last_name %></span>
        <p class="card-text font-size-sm"><%= raw(f.bio) %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>