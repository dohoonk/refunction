<div class="testimonials_container pages-card-padding">
  <div class="container">
    <%= form_for @referral do |f| %>
    <div class="row">
      <div style="font-size: 16px;opacity: 0.7;color: grey;">Required boxes are indicated with *</div>
    </div>
    <div class="row">
      <div class="col-sm-12 margin-bottom-12 career-pd-left-0 mt-4">

        <h3>Referral Source Information </h3>
        <div class="highlight"></div>

      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>I am inquiring about?</p>
          <%= f.select :category,  ["1 Day Functional Capacity Evaluation",
          "2 Day Functional Capacity Evaluation",
          "1 Day Cognitive Functional Capactiy Evaluation (Cog FCE)",
          "2 Day Cognitive Functional Capactiy Evaluation with Physical Testing (Cog FCE)",
          "Psychiatric Independent Medical Examination",
          "Brain Injury Assessment & Treatment",
          "Psychological Assessment",
          "Active Rehab Program",
          "Job Demands Analyses (JDA)",
          "Ergonomic or Risk Factor Analyses",
          "Return to Work Support Services",
          "Home Assessment",
          "Interdisciplinary Rehabilitation Assessments"
          "Work Simulation",
          "Counseling Services",
          "Community Rehabilitation Services",
          "Pre-Employment Screen",
          "Other"], {selected: @referral_page},{class: 'form-control input-box'} %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>* CM/Employer Contact Name</p>
        <%= f.text_field :rs_name, required: true, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>* CM/Employer Contact Phone #</p>
        <%= f.text_field :rs_phone, required: true, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>CM/Employer Contact Fax #</p>
        <%= f.text_field :rs_fax, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>* CM/Employer Contact Email</p>
        <%= f.text_field :rs_email, required: true, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>* Company/Organization</p>
        <%= f.text_field :rs_office_name, required: true, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Address</p>
        <%= f.text_field :rs_office_address, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>City </p>
        <%= f.text_field :rs_city, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Postal Code</p>
        <%= f.text_field :rs_postal_code, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Assistant’s Name</p>
        <%= f.text_field :rs_assistant_name, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Assistant’s Email</p>
        <%= f.email_field :rs_assistant_email, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>* Confirmation email to be sent to</p>
        <%= f.email_field :email_confirmation_address, required: true, class:"form-control input-box" %>
      </div>

    </div>

    <div class="row">
      <div class="col-sm-12 margin-bottom-12 career-pd-left-0 mt-5">

        <h3>Client Info Section </h3>
        <div class="highlight"></div>

      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>* Client Name </p>
        <%= f.text_field :client_name, required: true, class:"form-control input-box", placeholder: 'First Last (ex. John Smith)' %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>* Date of Birth</p>
        <%= f.date_select :client_birthday,
        {
          order: [ :month, :day, :year],
          start_year: Date.today.year - 90,
          end_year: Date.today.year,
          :include_blank => true,
        },
        {
          class:"date-picker-form input-box"
         } %>

      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Client Phone #</p>
        <%= f.text_field :client_phone, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Client Email</p>
        <%= f.text_field :client_email, class:"form-control input-box" %>
      </div>


      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Client Address</p>
        <%= f.text_field :client_address, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>City</p>
        <%= f.text_field :client_city, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Postal Code</p>
        <%= f.text_field :client_postal_code, class:"form-control input-box" %>
      </div>

      <div class='col-sm-6'>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Policy No.</p>
        <%= f.text_field :client_file_number, class:"form-control input-box" %>
      </div>

        <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Client ID No.</p>
        <%= f.text_field :client_sub_file_number, class:"form-control input-box" %>
      </div>


      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Date of Injury</p>
          <%= f.date_select :client_date_of_injury,
        {
          order: [ :month, :day, :year],
          start_year: Date.today.year - 65,
          end_year: Date.today.year,
          :include_blank => true,
        },
        {
          class:"date-picker-form input-box"
         } %>
      </div>

      <div class='col-sm-6'>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0 interpreter-required">
        <p>Is an Interpreter Required?</p>
          <%= f.select  :client_interpreter_required, ['Yes', 'No'], selected: 'No', class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0 interpreter-language">
        <div class='d-none'>
          <p>Language Required</p>
          <%= f.text_field :client_language_required, class:"form-control input-box" %>
        </div>
      </div>

      <div class="col-sm-12 margin-bottom-11 career-pd-left-0">
        <p>Diagnosis/Medical Concerns</p>
        <%= f.text_field :concerns, class:"form-control input-box" %>
      </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>Gender of the Client</p>

        <div class="radio-inline">
          <label><%= f.radio_button :client_sex, "Male" %> Male</label>
        </div>
        <div class="radio-inline">
          <label><%= f.radio_button :client_sex, "Female" %> Female</label>
        </div>
        <div class="radio-inline">
          <label><%= f.radio_button :client_sex, "Ohter" %> Other</label>
        </div>

        <%= f.text_field :client_sex, class:"form-control input-box", placeholder: "If other, please specify" %>

      </div>
    </div>


    <div class="row">
      <div class="col-sm-12 margin-bottom-12 career-pd-left-0 mt-5">

        <h3>Extra Info Section </h3>
        <div class="highlight"></div>

      </div>

       <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
          <p>Client is aware of Referral?</p>
          <form>
          <div class="radio-inline">
            <label><%= f.radio_button :client_aware, true %> Yes</label>
          </div>
          <div class="radio-inline">
            <label><%= f.radio_button :client_aware, false %> No</label>
          </div>
          </form>
        </div>

      <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
        <p>How did you hear about us?</p>

        <%= f.select :advertisement,  ["Advertising", "Brochure", "Family/Friend","Health Care Provider", "Returning Customer", "Social Media","Word of Mouth", "Other"], {},{class: 'form-control input-box'} %>
        <%= f.text_field :client_advertisement_other, class:"form-control input-box mt-2", placeholder: "Please Specify" %>
      </div>


      <div class="form-group col-sm-12 career-pd-left-0 career-pd-right-0 mt-4" >
        <p>Additional Comments</p>
        <%= f.text_area :content, class:"form-control", style: "height: 209px; width: 100%",
        placeholder: "Additional Comments" %>
      </div>

      <div class="row">
        <div class="col-3">
          <%= f.submit "Submit", class:"cta-see-team", style:"width: 181px; margin-bottom: 20px;" %>
        </div>
        <div class="col-12 padding-top: 15px; width: 271px !important; overflow: hidden;">
          <%= recaptcha_tags %>
        </div>

      </div>

      <%= f.hidden_field :referral_form_type, value: "employer" %>
    </div>
  </div>

  <% end %>
</div>
