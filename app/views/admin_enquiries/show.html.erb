<div class="admin-nav">
  <a class="navbar-brand" href="#"><%= image_tag("refunction_nav_logo.svg", class:"admin-logo") %>
  </a>
  <button class="admin-log-out-btn"> Log out</button>
</div>

<div class="container-fluid">
  <div class="row">

    <%= render 'layouts/admin_nav' %>


    <div class="admin-body col-sm-10" >
      <div class="admin-team-search-bar" style="min-height: 900px;">
        <div class="container-fluid">
          <div class="row">
            <div class="search-top col-sm-12">
              <p>Customer Enquiry Details</p>
            </div>
          </div>
          <div class="row admin-search-padding">
            <div class="col-sm-12">
              <div class="row">
                <div class="col-sm-4 margin-bottom-11 career-pd-left-0">
                  <p>Customer Name</p>
                  <div class="form-control input-box">
                    <%= @enquiry.first_name + " " + @enquiry.last_name %>
                  </div>
                </div>

                <div class="col-sm-4 margin-bottom-11 career-pd-left-0">
                  <p>Customer Phone</p>
                  <div class="form-control input-box">
                    <%=  @enquiry.phone %>
                  </div>
                </div>

                <div class="col-sm-4 margin-bottom-11 career-pd-left-0">
                  <p>Customer Email</p>
                  <div class="form-control input-box">
                    <%=  @enquiry.email %>
                  </div>
                </div>

                <div class="col-sm-12 margin-bottom-11 career-pd-left-0">
                  <p>Customer Enquiry</p>
                  <div class="form-control" style="word-wrap: break-word; min-height: 500px;">
                    <%= @enquiry.content %>
                  </div>
                </div>




              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
