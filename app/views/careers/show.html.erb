<%= render "layouts/nav" %>
<div class="banner_top_deco">
  <div class="banner-top-deco-inner-text">
    <div class="container" style="padding-bottom: 10px;">
      <div class="row mb-dp-none">
        <div class="banner-top-deco-header col-sm-12">
          Careers
        </div>
        <div class="banner-top-deco-sub col-sm-12">
        </div>
      </div>
    </div>
  </div>
</div>


<div class="why_work_with_us pages-card-padding mb-margin-top-40">
  <div class="container">
    <div class="row">

      <div class="col-md-12 col-xl-3">
        <div class="row justify-content-between">
          <div class="list_of_services_box">
            <h5>Current Job Postings</h5>
            <div class="highlight"></div>
            <ul>
              <% @careers.each do |f| %>
              <li><span class="current-listing-header"><%= link_to "#{f.title} Position", career_path(f) %> </span>
                <span class="current-listing-header-sub"><%= f.location %></span>
              </li>
              <% end %>

            </ul>
          </div>
        </div>
      </div>

      <div class="col-md-12 offset-xl-1 col-xl-8">


          <p class="show-header">
            <%= @career.title + "-" + @career.location %>
            <br>
            <%= @career.type_of_job %>
          </p>
          <p class="show-font">
          <%= raw(@career.description) %>
          </p>




        <div class="row careers-featured-opening-empty">

        </div>
        <%= form_for @job_application do |f| %>
          <div class="row">
            <p style="padding-top: 10px; font-weight: 700;">Choose a position that youâ€™re interested in applying</p>
            <%= f.select :position,  ["Occupational Therapist", "Kinesiologist", "Physiotherapist", "Administration","Clinical Counsellor", "Psychologist", "Other"], {},{class: 'col-sm-12 input-box margin-bottom-11', style:"height: 37px;"} %>

              <p style="padding-top: 10px; font-weight: 700;">Send your information and CV</p>
          </div>
          <div class="row">
            <div class="col-sm-6 margin-bottom-11 career-pd-left-0">
              <%= f.text_field :first_name, class:"form-control input-box", placeholder:"First Name"%>
            </div>
            <div class="col-sm-6 margin-bottom-11 career-pd-right-0" >
              <%= f.text_field :last_name, class:"form-control input-box", placeholder:"Last Name"%>
            </div>
            <div class="col-sm-6 margin-bottom-11 career-pd-left-0" >
              <%= f.text_field :email, class:"form-control input-box", placeholder:"Email"%>
            </div>
            <div class="col-sm-6 margin-bottom-11 career-pd-right-0" >
              <%= f.text_field :phone, class:"form-control input-box", placeholder:"Phone Number"%>
            </div>
            <div class="form-group col-sm-12 career-pd-left-0 career-pd-right-0" >
              <%= f.text_area :message, class:"form-control", style: "height: 339px; width: 100%",
              placeholder: "Leave us a message" %>
            </div>
          </div>

            <div class="row">
              <div class="col-sm-12 col-md-5 mb-dp-none" style="padding-left: 0px;">
                <p class="upload-cv-label">Upload CV</p>
                <%= f.file_field :resume %>
              </div>
              <div class="col-sm-12 col-md-3">
                  <%= f.submit "Submit", class:"cta-see-team", style:"width: 181px;" %>
              </div>
            </div>

            <div clas="row" style="margin-left: -15px;">
              <div style="padding-top: 15px; overflow: hidden;">
                <%= recaptcha_tags %>
              </div>
            </div>
         <% end %>

      </div>

    </div>
  </div>
</div>

<%= render "layouts/bottom_cta_card" %>
<%= render "layouts/footer" %>
