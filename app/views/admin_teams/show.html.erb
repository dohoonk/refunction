<%= render "layouts/nav" %>
<%= render "layouts/banner_top_deco" %>

<%= render 'our_teams/filter' %>

<div class="our-teams pages-card-padding">
  <div class="container">
    <div class="row">
      <%= render 'our_teams/side_link' %>
      <div class="col-sm-9">
        <div class="row">
          <div class="col-lg-5 col-xl-4 mg-bt-20">
            <div class="card">
              <%= image_tag @admin_team.image.url, class:"img-fluid border-color min-height-profile"%>
              <div class="card-body">
                <span class="font-lb bold"><%= @admin_team.first_name %> <%= @admin_team.last_name %></span>
                <p class="card-text font-size-sm"><%= @admin_team.title %></p>

                <% if @admin_team.second_title != nil %>
                  <p class="card-text font-size-sm" style="margin-bottom: 0px;"><%= @admin_team.occupation %></p>
                  <p class="card-text font-size-sm"><%= @admin_team.second_title %></p>
                <% else %>
                  <p class="card-text font-size-sm"><%= @admin_team.occupation %></p>
                <% end %>
                <p class="card-text font-size-sm" style="margin-bottom: 0px;">Phone: <%= @admin_team.phone %></p>
                <p class="card-text font-size-sm">Email: <%= @admin_team.email %></p>
              </div>
            </div>
          </div>
          <div class="col-lg-7 col-xl-8 mg-bt-20">
            <p class="about-us-header mb-padding-left-0" style="margin-bottom: 2px;"><%= @admin_team.first_name %> <%= @admin_team.last_name %>
            </p>
            <p>
              <span class="font-lb font-title"><%= @admin_team.title %></span>
            </p>

            <% if @admin_team.second_title != nil %>
              <p class="card-text font-size-sm" style="margin-bottom: 0px;"><%= @admin_team.occupation %></p>
              <p class="card-text font-size-sm"><%= @admin_team.second_title %></p>
            <% else %>
              <p class="card-text font-size-sm"><%= @admin_team.occupation %></p>
            <% end %>

            <p>
              <%= raw(@admin_team.bio) %>
            </p>
            <% if @admin_team.job_category_id != 1 && @admin_team.id != 44 %>
            <div class="row padding-top-50">
              <%= link_to "Download CV", @admin_team.resume.url, class:"cta-see-team", target:"_blank" %>
            </div>
            <% end %>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>
<%= render "layouts/bottom_cta_card" %>
<%= render "layouts/footer" %>
