<div class="admin-nav">
  <a class="navbar-brand" href="#"><%= image_tag("refunction_nav_logo.svg", class:"admin-logo") %>
  </a>
</div>

<div class="container-fluid">
  <div class="row">
    <%= render 'layouts/admin_nav' %>

    <div class="admin-body col-sm-10">
      <div class="admin-card">
        <div class="container-fluid">
          <div class="row">
            <div class="search-top col-sm-12 pd-top-10">
              <p>New Team Member</p>
            </div>
          </div>
        </div>
        <div class="container card-inner-padding">
          <%= form_for (@admin_team) do |f| %>
          <div class="row justify-content-between mg-left card-margin-bottom">
            <div>
              <%= f.label :image %><br>
              <%= f.file_field :image %>
              <button class="cta-see-team">Uploda Photo</button>
            </div>

          </div>
          <div class="row">
            <div class="col-sm-6">
              <div class="admin-member-pic-container">

              </div>
            </div>
            <div class="col-sm-6">
              <div class="row">
                <div class="col-sm-6 margin-bottom-11" style="padding-left: 0px;">
                  <%= f.text_field :first_name, class:"form-control input-box", placeholder: "First Name" %>
                  <!-- <input type="text" class="form-control input-box" placeholder="First name"> -->
                </div>
                <div class="col-sm-6 margin-bottom-11" style="padding-right: 0px;">
                  <!-- <input type="text" class="form-control input-box" placeholder="Last name"> -->
                  <%= f.text_field :last_name, class:"form-control input-box", placeholder: "last Name" %>
                </div>
                <div class="col-sm-6 margin-bottom-11" style="padding-left: 0px;">
                  <%= f.text_field :title, class:"form-control input-box", placeholder: "title" %>
                  <!-- <input type="text" class="form-control input-box" placeholder="Email"> -->
                </div>
                <div class="col-sm-6 margin-bottom-11" style="padding-right: 0px;">
                  <%= f.text_field :occupation, class:"form-control input-box", placeholder: "occupation" %>
                  <!-- <input type="text" class="form-control input-box" placeholder="Phone"> -->
                </div>
                <div class="col-sm-6 margin-bottom-11" style="padding-left: 0px;">
                  <input type="text" class="form-control input-box" placeholder="Email">
                </div>
                <div class="col-sm-6 margin-bottom-11" style="padding-right: 0px;">
                  <input type="text" class="form-control input-box" placeholder="Phone">
                </div>
                <div class="col-sm-6 margin-bottom-11" style="padding-left: 0px;">
                  <input type="text" class="form-control input-box" placeholder="Email">
                </div>
                <div class="col-sm-6 margin-bottom-11" style="padding-right: 0px;">
                  <input type="text" class="form-control input-box" placeholder="Phone">
                </div>
                <div>
                  <%= f.collection_select :job_category_id, JobCategory.all, :id, :title %>
                </div>
                <!-- <div class="form-group col-sm-12" style="padding-right: 0px; padding-left: 0px;">
                  <textarea class="form-control" style="height: 339px; width: 100%;" id="exampleFormControlTextarea1" placeholder="Leave us a message"></textarea>
                </div> -->
              </div>
            </div>
            <div class="col-sm-12 card-margin-top">
              <%= f.text_area :bio, :class => "tinymce", :rows => 40, :cols => 30 %>
              <%= tinymce %>
              <!-- <textarea class="form-control" style="height: 339px; width: 100%;" id="exampleFormControlTextarea1" placeholder="Leave us a message"></textarea> -->
            </div>
            <div class="col-sm-12 card-margin-top">
              <textarea class="form-control" style="height: 339px; width: 100%;" id="exampleFormControlTextarea1" placeholder="Leave us a message"></textarea>
            </div>
            <div class="col-sm-12 card-margin-top">
              <%= f.submit "Save", class:"admin-button-gray" %>
              <!-- <button class="admin-button-blue">Save As Draft</button> -->
              <button class="admin-button-gray">Save & Publish</button>
              <button class="admin-button-red">Delete</button>
            </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
